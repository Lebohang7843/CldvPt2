@{
    ViewData["Title"] = "Welcome to Event Ease";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #141628;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #e3f2fd;
        margin: 0;
        padding: 0;
    }

    .hero-section {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 2rem;
        background: linear-gradient(135deg, #1a2238, #141628);
    }

    .hero-card {
        background: rgba(32, 36, 60, 0.85);
        backdrop-filter: blur(12px);
        border-radius: 20px;
        padding: 3rem 2rem;
        max-width: 900px;
        width: 100%;
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.6);
        text-align: center;
        transition: transform 0.3s ease;
        border: 1px solid #2f354f;
    }

        .hero-card:hover {
            transform: translateY(-6px);
        }

        .hero-card h1 {
            font-size: 3rem;
            font-weight: 700;
            color: #4fc3f7;
            margin-bottom: 1.2rem;
        }

        .hero-card p {
            font-size: 1.2rem;
            color: #cfd8dc;
            margin-bottom: 2.5rem;
            line-height: 1.6;
        }

    .hero-buttons {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 1.2rem;
        margin-bottom: 2.2rem;
    }

        .hero-buttons a {
            padding: 0.85rem 2.2rem;
            font-size: 1rem;
            border-radius: 10px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.6rem;
            border: 2px solid transparent;
            background-color: #1f253d;
        }

    .btn-primary {
        color: #4fc3f7;
        border-color: #4fc3f7;
    }

        .btn-primary:hover {
            background-color: #4fc3f7;
            color: #141628;
        }

    .btn-success {
        color: #81c784;
        border-color: #81c784;
    }

        .btn-success:hover {
            background-color: #81c784;
            color: #141628;
        }

    .btn-secondary {
        color: #b0bec5;
        border-color: #b0bec5;
    }

        .btn-secondary:hover {
            background-color: #b0bec5;
            color: #141628;
        }

    .footer-note {
        font-size: 0.95rem;
        color: #b0bec5;
    }

        .footer-note strong {
            color: #4fc3f7;
        }

</style>

<section class="hero-section">
    <div class="hero-card" role="region" aria-labelledby="hero-title" aria-describedby="hero-desc">
        <h1 id="hero-title">Welcome to <span style="color: #4fc3f7;">Event Ease</span></h1>
        <p id="hero-desc">
            Effortlessly plan events, discover venues, and manage bookings.<br />
            Your all-in-one professional platform for event management.
        </p>

        <div class="hero-buttons">
            <a asp-controller="Venues" asp-action="Index" class="btn-primary">🏛️ View Venues</a>
            <a asp-controller="Events" asp-action="Index" class="btn-success">🎉 Explore Events</a>
            <a asp-controller="Bookings" asp-action="Index" class="btn-secondary">📅 Manage Bookings</a>
        </div>

        <div class="footer-note">
            Powered by <strong>ASP.NET Core MVC</strong> — Built for simplicity, scaled for success.
        </div>
    </div>
</section>
